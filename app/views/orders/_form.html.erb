<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
    <%= f.label :visa %><br>
    <%= form_for :trip, url: {action: "show"}, html: {method: "get"} do |fu| %>
    <%= fu.select :purpose_id, options_for_select(@purposes.collect { |purpose| [purpose.name.titleize, purpose.id] }, 1), {}, { id: 'purpose_select' } %>
    <%= fu.select :visa_id, options_for_select(@visas.collect { |visa| [visa.title.titleize, visa.id] }, 0), {}, { id: 'visas_select' } %>
    <% end %>
    
    
  </div>
  <div class="field">
    <%= f.label :entry_date %><br>
    <%= f.date_select :entry_date %>
  </div>
  <div class="field">
    <%= f.label :fast_track %><br>
    <%= f.check_box :fast_track %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :speed %><br>
    <select><%= options_from_collection_for_select(ProcSpeed.all, :id, :short_desc) %></select>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="field">
    <%= f.label :QTY %><br>
    <%= f.number_field :QTY %>
  </div>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.number_field :amount %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.text_field :status %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
